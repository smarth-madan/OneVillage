<div id="main">
	
	<%= form_tag(:controller => "photo", :action => "updatePhoto") do |f| %>
	<div class = "field">
		<table>
		<tr>
			<td>Album Id:</td>
			<td><%= text_field_tag :albumId,params[:id]  %></td>
		</tr>
		<tr>
			<td>User Id: </td>
			<td><%= text_field_tag :userId, params[:userid]  %></td>
		</tr>
		<tr>
			<td>Photo Id: </td>
			<td><%= text_field_tag :photoId, params[:photoid]  %></td>
		</tr>
		<tr>
			<td>Latitude:</td>
			<td><%= text_field_tag :latitude, params[:latitude] %></td>
		</tr>
		<tr>
			<td>Longitude:</td>
			<td><%= text_field_tag :longitude, params[:longitude] %></td>
		</tr>
		<tr>
			<td>Description:</td>
			<td><%= text_area_tag :description, params[:description] %></td>
		</tr>
		<tr>
			<td>Date(mm/dd/yyyy): </td>
			<td><%= text_field_tag :createdDate, params[:createdDate] %></td>
		</tr>
		</table>
	</div>

	<div class = "action" >
		<%= submit_tag value = "Update Photo" %>
	</div>
	
	<% end %>
	
</div>